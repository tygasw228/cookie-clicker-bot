{
  "manifest_version": 3,
  "name": "Cookie Clicker Auto",
  "version": "1.0",
  "description": "Автокликер для Cookie Clicker",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://orteil.dashnet.org/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [{
    "matches": ["https://orteil.dashnet.org/cookieclicker/*"],
    "js": ["content.js"],
    "run_at": "document_end"
  }]
}